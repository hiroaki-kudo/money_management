<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>

<% @kiddatas.each do |kiddata| %>
  <% if current_user.id == kiddata.parent_id %>
    <tr>
      <td><%= link_to "#{kiddata.kid_id}のマイページ", user_path(kiddata.kid_id) %></td>
    </tr>
    <p>
  <% end %>
<% end %>

<p>
<%= link_to '出納情報一覧', treasurers_path %>
<p>
<%= link_to 'ユーザ情報編集', edit_user_path(@user.id) %>
<p>
<%= link_to 'ユーザ削除', user_path(@user.id), method: :delete, data: { confirm: '本当に削除していいですか？' }  %>
<p>

<% if current_user.admin == true %>
  <%= link_to "管理者画面へ", admin_users_path %>
<% end %>
<p>
<% if current_user.parent_or_child == 0 %>
<%= link_to 'マネジメントページ', new_management_path %>
<% end %>
