
<div class="user_content">
  <h3><%= @user.name %>のページ</h3>
  <p>メールアドレス: <%= @user.email %></p>
</div>

<% if current_user.parent_or_child == 0 %>
<div class="user_show_content2">
 〜子供の使用項目は以下の通りです〜
</div>

  <table class="user_show_task">
    <tr>
      <th>日付</th>
      <th>カテゴリ</th>
      <th>使った物</th>
      <th>使用金額</th>
      <th>収入金額</th>
    </tr>
    <% @treasurers.each do |treasurer| %>
      <tr>
        <td><%= treasurer.use_date_at %></td>
        <td><%= treasurer.category.name %></td>
        <td><%= treasurer.use_what %></td>
        <td><%= treasurer.use_money %></td>
        <td><%= treasurer.get_money %></td>
        <td><%= link_to '詳細', treasurer_path(treasurer.id) %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<div class="user_content2">
  <% if current_user.parent_or_child == 1 %>
    <p><%= link_to '使ったもの一覧', treasurers_path %></p>
  <% end %>

  <% if current_user.parent_or_child == 0 %>
    <p><%= link_to 'ユーザ編集', edit_user_path(@user.id) %></p>
  <% end %>

  <% if current_user.admin == true %>
    <p><%= link_to "管理者画面へ", admin_users_path %><p>
  <% end %>

  <% if current_user.parent_or_child == 0 && current_user.admin == false %>
    <p><%= link_to '親子関係の登録', new_management_path %><p>
    <p><%= link_to '子供一覧', users_path %></p>
  <% end %>
</div>
