<h1>Sign up</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :parent_or_child %>
  <%= f.select :parent_or_child, [["親", "親"], ["子供", "子供"]], include_blank: "選択して下さい" %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>


  <% @user.kids.each_with_index do |kids, index| %>
    <%= f.fields_for :kids, kids do |t| %>
        <p><%= t.label :子or親 %></p>
        <%= f.select :parent_or_child, [["親", "親"], ["子供", "子供"]], include_blank: "もう一度選択して下さい" %>
    <% end %>
  <% end %>


  <%= f.submit "Create my account" %>
<% end %>
