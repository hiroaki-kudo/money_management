<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1 class="user_new_edit_title">アカウント作成</h1>
<div class="user_new_edit_content">
  <div class="user_new_edit_content">
    <%= form_with(model: @user, local: true) do |f| %>
      <p id="space"><%= f.label :name %></p>
      <p><%= f.text_field :name %></p>
      <p id="space"><%= f.label :email %></p>
      <p><%= f.email_field :email %></p>
      <p id="space"><%= f.label :parent_or_child %></p>
      <p><%= f.select :parent_or_child, {'親': 0, '子': 1}, include_blank: "選択して下さい" %></p>
      <p id="space"><%= f.label :password %></p>
      <p><%= f.password_field :password %></p>
      <p id="space"><%= f.label :password_confirmation %></p>
      <p><%= f.password_field :password_confirmation %></p>
      <p><%= f.submit "Create my account" %></p>
    <% end %>
  </div>
</div>
