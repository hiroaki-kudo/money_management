
<div class="user_index_content">
  <p>子供が存在していれば子供一覧が表示されます</p>
  <% @users.each do |user| %>
    <%= user.kid.name %>
    <%= link_to '詳細ページを表示', user_path(user.kid.id) ,class: user.id %>
    <%= link_to 'ユーザ編集', edit_user_path(user.kid.id) %>
    <%= link_to 'ユーザ削除', user_path(user.kid.id), method: :delete, data: { confirm: '本当に削除していいですか？' }  %>
  <% end %>
</div>
