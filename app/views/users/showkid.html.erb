

<table>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= link_to '詳細ページを表示', admin_user_path(user.id) ,class: user.id %></td>
    <td><%= link_to '情報を編集する', edit_admin_user_path(user.id) %></td>
    <td><%= link_to '情報を削除する', admin_user_path(user.id), method: :delete%></td>
  </tr>
  <% end %>
</table>



<% if current_user.parent_or_child == 1 %>
  <p><%= link_to '使ったもの一覧', treasurers_path %></p>
<% end %>

<% if current_user.admin == true %>
  <p><%= link_to "管理者画面へ", admin_users_path %><p>
<% end %>

<% if current_user.parent_or_child == 0 %>
  <p><%= link_to 'マネジメントページ', new_management_path %><p>
<% end %>
